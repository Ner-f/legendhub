<!doctype html>
<html lang="en">
    <head>
        <%-include("../shared/meta")-%>
        <link href="https://www.legendhub.org/changelog/details.html?id=<%-vm.changelog.id%>" rel="canonical">
    </head>
    <body ng-app="legendwiki-app">
        <%-include("../shared/header")-%>
        <div class="container">
            <div class="row">
                <h1 class="text-primary"><%=title%></h1>
            </div>
            <div class="row justify-content-center justify-content-md-start">
                <div class="card" style="border:0;background:none">
                    <div class="card-header p-0" style="border:0;background:none">
                        <div class="justify-content-center">
                            <div class="btn-group" role="group" aria-label="Toolbar">
                                <button type="button" class="btn btn-outline-primary">Released on <%=locals.displayDateTime(vm.changelog.createdOn)%></button>
                                <%if(locals.user && locals.user.permissions.ChangelogVersion && locals.user.permissions.ChangelogVersion.update) {%>
                                <a class="btn btn-outline-primary" role="button" href="<%-(!locals.user ? "/login.html?returnUrl=" : "")%>/changelog/edit.html?id=<%-vm.changelog.id%>"><i class="far fa-edit"></i><span class="d-none d-md-inline"> Edit</span></a>
                                <%}%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br><br>
            <div class="row" ng-cloak>
                <div class="card col-12" ng-init="changelogNotes='<%=vm.changelog.notes.replace(/'/g,"&#39;").replace(/\\/g,"\\\\")%>'">
                    <div class="card-body" markdown-to-html="changelogNotes"></div>
                </div>
            </div>
        </div>
        <%-include("../shared/footer")-%>
        <%-include("../shared/scripts")-%>
        <%-include("../shared/markdown")-%>
    </body>
</html>
