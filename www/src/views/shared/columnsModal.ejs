<div id="columnsModal" aria-labelledby="columnsModalLabel" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="columnsModalLabel">Select visible columns</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <p class="col-12 text-info">Use these to hide columns from the search result grid.</p>
                </div>
                <div class="row">
                    <button class="col-12 btn btn-primary btn-block" ng-click="resetColumns()">Reset to defaults</button>
                </div>
                <br />
                <div class="list-group">
                <% for (let i = 0; i < vm.itemStatCategories.length; ++i) { %>
                    <div class="list-group-item flex-column align-items-start">
                        <h4 class="mb-3"><%= vm.itemStatCategories[i].name _%></h4>
                        <div class="list-group list-group-flush">
                        <%
                        for (let j = 0; j < vm.itemStatCategories[i].getItemStatInfo.length; ++j) {
                            let stat = vm.itemStatCategories[i].getItemStatInfo[j];
                        %>
                            <button ng-click="toggleColumn('<%- stat.short _%>')" type="button" class="list-group-item list-group-item-action list-group-item-light">
                                <div class="d-flex col justify-content-between">
                                    <h5><%= stat.display _%></h5>
                                    <span><i ng-class="{'text-success fa-check': showColumn('<%- stat.short _%>', <%- vm.selectedColumns.includes(stat.short) _%>), 'text-danger fa-times': !showColumn('<%- stat.short _%>', <%- vm.selectedColumns.includes(stat.short) _%>)}" class="fas"></i></span>
                                    </span>
                                </div>
                            </button>
                        <% } %>
                        </div>
                    </div>
                <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
