<!doctype html>
<html lang="en">
<head>
    <%- include('../shared/meta') %>

	<title>Item Search | LegendHUB</title>
</head>
<body ng-app="legendwiki-app" ng-controller="items">
    <%- include('../shared/header') %>
	<div class="container-fluid">
		<div class="px-0">
			<div class="row">
				<div class="col-12">
					<div class="row text-center">
						<h1 class="col-12">Items</h1>
					</div>
					<div class="px-0 px-md-5">
                        <span class="text-info">Filters:
                            <%
                            for (let i = 0; i < vm.itemStatInfo.length; ++i) {
                            %>
                            <a href="" ng-if="isFilterEnabled('<%- vm.itemStatInfo[i].var %>', <%- vm.selectedFilters.hasOwnProperty(vm.itemStatInfo[i].var) %>)" ng-click="removeFilter('<%- vm.itemStatInfo[i].var %>')" class="badge badge-pill badge-info"<%- vm.selectedFilters.hasOwnProperty(vm.itemStatInfo[i].var) ? '' : ' ng-cloak' %>><%- vm.itemStatInfo[i].display %>&nbsp;<i class="fas fa-times"></i></a>
                            <% } %>
                        </span>
						<form ng-submit="onSearchClicked()">
							<div class="row">
								<div class="input-group col-12">
									<input type="text" ng-model="searchString" class="form-control" placeholder="Search by name..." lh-autofocus>
									<div class="input-group-append">
										<button class="btn btn-outline-primary" type="button" data-toggle="modal" data-target="#columnsModal" aria-expanded="false"><span class="d-none d-md-inline-block">Columns</span><i class="d-inline-block d-md-none fas fa-columns"></i></button>
										<button class="btn btn-outline-primary" type="button" data-toggle="modal" data-target="#filtersModal" aria-expanded="false"><span class="d-none d-md-inline-block">Filters</span><i class="d-inline-block d-md-none fas fa-filter"></i></button>
										<button class="btn btn-primary" type="submit"><span class="d-none d-md-inline-block">Search</span><i class="d-inline-block d-md-none fas fa-search"></i></button>
									</div>
								</div>
							</div>
						</form>
					</div>
					<br />
					<div class="row">
						<div class="col-12">
							<div class="card">
								<div class="card-header">
									<strong class="float-left">Search Results</strong>
									<lh-perm-check lh-perm-name="Item" lh-perm-create class="float-right clickable">
										<a href="/items/add.html">
											<i class="fas fa-plus"></i>
										</a>
									</lh-perm-check>
									<lh-perm-check lh-perm-name="Item" lh-perm-create lh-perm-inverse class="float-right clickable">
										<a href="/login.html?returnUrl=/items/add.html">
											<i class="fas fa-plus"></i>
										</a>
									</lh-perm-check>
								</div>
								<div class="table-responsive">
									<table class="table table-sm table-md table-hover table-striped table-bordered mb-0">
										<thead class="thead-dark">
											<tr>
                                                <% for (let i = 0; i < vm.itemStatInfo.length; ++i) { %>
                                                <th class="text-center" ng-if="showColumn('<%- vm.itemStatInfo[i].short _%>', <%- vm.selectedColumns.includes(vm.itemStatInfo[i].short) _%>)"ng-click="onColumnHeaderClicked('<%- vm.itemStatInfo[i].short _%>')"<%- vm.selectedColumns.includes(vm.itemStatInfo[i].short) ? '' : ' ng-cloak' %> nowrap><%= vm.itemStatInfo[i].display _%>&nbsp;<i class=""></i></th>
                                                <% } %>
											</tr>
										</thead>
										<tbody>
                                        <% for (let i = 0; i < vm.results.length; ++i) { %>
                                            <tr ng-click="onItemClicked(<%- vm.results[i].id _%>)" style="cursor: pointer;">
                                                <% for (let j = 0; j < vm.itemStatInfo.length; ++j) {
                                                    let stat = vm.itemStatInfo[j];
                                                %>
                                                <% if (stat.var === "name") { %>
                                                <td class="text-primary font-weight-bold" ng-if="showColumn('<%- stat.short _%>', <%- vm.selectedColumns.includes(stat.short) _%>)"<%- vm.selectedColumns.includes(stat.short) ? '' : ' ng-cloak' %>>
                                                <% } else if (stat.var === "alignRestriction") { %>
                                                <td class="text-center text-monospace" ng-if="showColumn('<%- stat.short _%>', <%- vm.selectedColumns.includes(stat.short) _%>)"<%- vm.selectedColumns.includes(stat.short) ? '' : ' ng-cloak' %>>
                                                <% } else { %>
                                                <td class="text-center" ng-if="showColumn('<%- stat.short _%>', <%- vm.selectedColumns.includes(stat.short) _%>)"<%- vm.selectedColumns.includes(stat.short) ? '' : ' ng-cloak' %>>
                                                <% } %>
                                                    <%
                                                        if (stat.type === 'bool') {
                                                    %>
                                                    <span>
                                                        <% if (vm.results[i][stat.var] == 1) { %>
                                                        <i class="text-success fas fa-check"></i>
                                                        <% } else { %>
                                                        <i class="text-danger fas fa-times"></i>
                                                        <% } %>
                                                    </span>
                                                    <% } else if (stat.type === 'select') { %>
                                                    <% if (stat.var === 'AlignRestriction') { %>
                                                    <span style="white-space: pre">
                                                    <% } else { %>
                                                    <span>
                                                    <% } %>
                                                        <%= vm.constants.selectShortOptions[stat.var][vm.results[i][stat.var]] _%>
                                                    </span>
                                                    <% } else if (stat.type === 'int' || stat.type === 'decimal' || stat.type === 'string') { %>
                                                        <span><%= vm.results[i][stat.var] _%>
                                                    <% } %>
                                                </td>
                                                <% } %>
                                            </tr>
                                        <% } %>
										</tbody>
									</table>
								</div>
							</div>
						</div>
					</div>
					<br />
                    <div class="row">
                        <nav class="col" aria-label="Result navigation">
                            <ul class="pagination">
                                <li class="page-item<%- vm.page === 1 ? ' disabled' : '' %>">
                                    <a href="" class="page-link" aria-label="first">
                                        <span aria-hidden="true">
                                            <i class="fas fa-angle-double-left"></i>
                                        </span>
                                        <span class="sr-only">First</span>
                                    </a>
                                </li>
                                <li class="page-item<%- vm.page === 1 ? ' disabled' : '' %>">
                                    <a href="" class="page-link" aria-label="previous">
                                        <span aria-hidden="true">
                                            <i class="fas fa-angle-left"></i>
                                        </span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>
                                <li class="page-item<%- vm.moreResults ? '' : ' disabled' %>">
                                    <a href="" class="page-link" aria-label="previous">
                                        <span aria-hidden="true">
                                            <i class="fas fa-angle-right"></i>
                                        </span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                                <li class="page-item disabled">
                                    <span class="page-link">Items: <%- (vm.rows * (vm.page - 1)) + 1 %> - <%- (vm.rows * (vm.page - 1)) + vm.results.length %></span>
                                </li>
                            </ul>
                        </nav>
                    </div>
				</div>
			</div>
		</div>
	</div>
    <%- include('../shared/columnsModal') %>
    <%- include('../shared/filtersModal') %>
    <%- include('../shared/footer') %>
    <%- include('../shared/scripts') %>
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.10/angular.min.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.10/angular-cookies.min.js"></script>
	<script src="/js/apps/legendwiki-app.js?%%version%%"></script>
	<script src="/js/controllers/items/main.js?%%version%%"></script>
</body>
</html>

