<!doctype html>
<html lang="en">
    <head>
        <%-include("../shared/meta")-%>
    </head>
    <body>
        <%-include("../shared/header")-%>
        <div class="container">
            <div class="row text-center">
                <h1 class="col-12">Changelog</h1>
            </div>
            <br/>
            <lh-perm-check lh-perm-name="ChangelogVersion" lh-perm-create class="row" ng-cloak>
                <div class="col-12">
                    <a href="/changelog/add.html" class="btn btn-outline-primary border-bottom-0 rounded-bottom-0 mr-1 float-right"><i class="fas fa-plus"></i></a>
                </div>
            </lh-perm-check>
            <div class="row">
                <div class="col-12 list-group">
                    <%for (let i = 0; i < vm.results.length; ++i) {%>
                    <a href="/changelog/details.html?id=<%-vm.results[i].id%>" class="list-group-item list-group-item-action flex-column align-items-start">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">Version <%=vm.results[i].version%></h5>
                            <small class="text-info"><%=vm.results[i].createdOn.slice(0, 10)%></small>
                        </div>
                    </a>
                    <%}%>
                </div>
            </div>
            <br><br>
        </div>
        <%-include("../shared/footer")-%>
        <%-include("../shared/scripts")-%>
    </body>
</html>
